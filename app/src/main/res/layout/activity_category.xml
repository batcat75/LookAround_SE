<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    tools:context="com.lookaround.blarblarblar.lookaround.CategoryActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView_menu1"
        android:layout_marginTop="30dp"
        android:src="@drawable/food"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView_menu2"
        android:layout_marginTop="30dp"
        android:src="@drawable/gift"
        android:layout_below="@+id/imageView_menu1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ของกิน รสเด็ด"
        android:id="@+id/txtMenu1"
        android:layout_alignBottom="@+id/imageView_menu1"
        android:layout_alignLeft="@+id/imageView_menu1"
        android:layout_alignStart="@+id/imageView_menu1"
        android:layout_alignRight="@+id/imageView_menu1"
        android:layout_alignEnd="@+id/imageView_menu1"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="#ffffffff"
        android:background="#cf000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ของฝาก"
        android:id="@+id/txtMenu2"
        android:layout_alignBottom="@+id/imageView_menu2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/imageView_menu2"
        android:layout_alignEnd="@+id/imageView_menu2"
        android:background="#cf000000"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="#ffffffff" />

</RelativeLayout>
